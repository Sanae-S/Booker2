<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head>

  <body>

    <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
    <nav class="nav navbar-nav navbar-left">
      <h3><span>Bookers</span></h3>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to user_path(current_user.id) ,class:"icon-bar" do %>
            <span class="glyphicon glyphicon-home home"> Home </span>
            <% end %>
          </li>
          <li> <%= link_to users_path ,class:"icon-bar" do %>
            <span class="glyphicon glyphicon-user"> Users </span>
            <% end %>
          </li>
          <li><%= link_to books_path ,class:"icon-bar" do %>
            <span class="glyphicon glyphicon-book" > Books </span>
            <% end %>
          </li>
          <li><%= link_to destroy_user_session_path(current_user.id), method: :delete ,class:"icon-bar" do %>
            <span class="glyphicon glyphicon-log-out" > logout </span>
            <% end %>
          </li>
      </ul>
              <% else %>
                <ul class="nav navbar-nav navbar-right">
                  <li><a class="glyphicon glyphicon-home home" href="/"> Home</a></li>
                  <li><a class="glyphicon glyphicon-link about" href="/home/about"> About</a></li>
                  <li><a class="glyphicon glyphicon-edit sign_up" href="/users/sign_up"> sign up</a></li>
                  <li><a class="glyphicon glyphicon-log-in sign_in" href="/users/sign_in"> login</a></li>
                </ul>
              <% end %>
    </nav>
      </div>
      </header>
            </ul>
          </div>
      </nav>
    </div>

    <%= yield %>

  </body>
</html>