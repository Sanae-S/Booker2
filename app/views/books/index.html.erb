<p id= "notice"> </p>
<%= flash[:notice] %>
<div class="body">
  <div class="container">
  	<p id="notice"></p>
  	<div class="row">
  	  <div class="col-xs-3">
        <%= render 'books/profile_new', book:@book, user:@user, books:@books %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">

          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to  user_path(book.user) do %>
                  <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
                  <% end %>
              </td>
              <td>
                <%= link_to  book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
             </tr>
           <% end %>
           </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
