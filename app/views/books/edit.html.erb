<h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <p><%= @book.errors.count %> error prohibited this obj from being saved:</p>
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>

    <% end %>
    </ul>
  <% end %>

<div class="form-body">
  <%= form_for(@book) do |f| %>
    <div class="form-group has-icon">
      <label class="control-label sr-only" for="inputEmail">Title</label>
      <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"title"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>
    <div class="form-group has-icon">

    <div>
      <label class="control-label sr-only" for="inputEmail">Body</label>
      <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"body"%>
      <span class="fa fa-user form-control-icon" aria-hidden="true"></span>

      <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %><%= link_to "Back", books_path %>
</div>
