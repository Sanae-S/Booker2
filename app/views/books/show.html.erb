<p id= "notice"> </p>
<%= flash[:notice] %>

<div class="body">
  <div class="container">
  	<p id="notice"><%=flash[:notice] %> </p>
  	<div class="row">
  	  <div class="col-xs-3">
        <%= render 'books/profile_new', book:@book, user:@user, book_new:@book_new %>
      </div>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
           <tbody>
            <tr>
              <td>
              	 <%= link_to  user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "100x100" %>
                <p><%= @user.name %></p>
                  <% end %>
              	<br>
              </td>
              <td>
                <%= link_to @book.title ,book_path(@book) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user == current_user %>
              <td>
                  <%= link_to edit_book_path(@book) do %>
                    <button type="button" class="btn-sm btn-success">Edit</button>
                  <% end %>
              </td>
              <td>
                <%= link_to book_path(@book), method: :delete do %>
                <button type="button" class="btn-sm btn-danger">Destroy</button>
                <% end %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
