<p id= "notice"> </p>
<%= flash[:notice] %>

<div class="body">
  <div class="container">
  	<p id="notice"><%=flash[:notice] %> </p>
  	<div class="row">
  	  <div class="col-xs-3">
        <%= render 'books/profile_new', book:@book, user:@user %>
      </div>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table">
           <tbody>
            <tr>
              <td>
              	<%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
              	<br>
              	<% if @user != current_user %>
                  <%= link_to @user.name, user_path(@user) %>
                <% end %>
              	<%= @user.name %>
              </td>
              <td>
                <%= link_to @book.title ,book_path(@book) %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user == current_user %>
              <td>
                  <%= link_to edit_book_path(@book), class:"btn-sm btn-success" do %>
                    <button type="button" class="btn-sm btn-success">Edit</button>
                  <% end %>
              </td>
              <td>
                <%= link_to book_path(@book), method: :delete ,class:"btn-sm btn-success" do %>
                <button type="button" class="btn-sm btn-success">Destroy</button>
                <% end %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
